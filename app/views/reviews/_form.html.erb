<!-- app/views/reviews/_form.html.erb -->
<%= form_with(model: [ @book, @review ], data: { turbo_frame: "reviews" }) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="field">
  <%= form.label :rating %>
  <%= form.number_field :rating, min: 1, max: 5 %>
  </div>

  <%= form.submit "Submit Review", class: "btn btn-primary" %>
<% end %>
